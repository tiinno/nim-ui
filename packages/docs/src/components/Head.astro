---
/**
 * Custom Head component for SEO and meta tags
 * Extends Starlight's default head component
 */
import type { Props } from '@astrojs/starlight/props';
import StarlightHead from '@astrojs/starlight/components/Head.astro';

// Get page metadata
const { entry } = Astro.props;
const title = entry.data.title;
const description = entry.data.description || 'Modern, accessible, production-ready React component library built with TypeScript and Tailwind CSS v4';
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
---

<StarlightHead {...Astro.props}>
  <!-- Enhanced meta tags -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  {canonical && <meta property="og:url" content={canonical.href} />}

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />

  <!-- Preconnect to optimize font loading -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Canonical URL -->
  {canonical && <link rel="canonical" href={canonical.href} />}
</StarlightHead>
